{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components": ["src/components/index.tsx"],
      "@ui": ["src/components/ui/index.tsx"],
      "@charts": ["src/components/charts/index.tsx"],


      "@services": ["src/services/*"],
      "@utils": ["src/utils/index.ts"], 
      "@hooks": ["src/hooks/*"],
      "@constants": ["src/constants/index.data"],
      "@ttypes": ["src/types/index.ts"],
      "@context": ["src/context/*"],
      "@router": ["src/router/index.tsx"],
      "@layouts": ["src/app/index.tsx"],
      "@pages": ["src/pages/index.tsx"],
      "@store": ["src/stores/store.ts"],
      "@stores": ["src/stores/stores.ts"],

      "@assets": ["src/assets/*"],
      "@styles": ["src/assets/styles/*"],
      "@images": ["src/assets/images/*"],
      "@icnos": ["src/assets/icnos/*"],
      "@theme": ["src/theme/index.ts"],

    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}